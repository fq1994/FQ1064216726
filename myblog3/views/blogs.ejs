<div id="OSC_Screen"><!-- #BeginLibraryItem "/Library/OSC_Banner.lbi" -->
<%include header.ejs%>
	<div id="OSC_Content">
<div id="AdminScreen">

  <%include left.ejs%>
    <div id="AdminContent">
<div class="MainForm BlogArticleManage">
  <h3 class="title">共有 3 篇博客，每页显示 40 个，共 1 页</h3>
    <div id="BlogOpts">
	<a href="javascript:;" id="btnSelectAll">全选</a>&nbsp;|
	<a href="javascript:;" id="btnCancel">取消</a>&nbsp;|
	<a href="javascript:;" id="btnReverse">反向选择</a>&nbsp;|
	<a href="javascript:;" id="btnDelete">删除选中</a>
  </div>
  <ul>
	  <%
	  for(var i=0;i<blogs.length;i++){
		  %>
	  <li class="row_1">
		  <input name="blog" value="<%=blogs[i].blog_id%>" type="checkbox">
		  <a href="viewPost_comment.htm" target="_blank"><%=blogs[i].title%></a>
		  -<%=blogs[i].type_name%>
		  <small><%=blogs[i].create_time.toLocaleString()%></small>
	  </li>
	  <%
	  }
	   %>


	  </ul>
    </div>
</div>
	<div class="clear"></div>
</div>

</div>
	<div class="clear"></div>
	<div id="OSC_Footer">© 赛斯特(WWW.SYSIT.ORG)</div>
</div>
<script src="/javascripts/jquery-1.11.3.min.js"></script>;
<script>
	$(function(){
		$('#btnDelete').on('click',function(){
			var valueStr='';
			var $check=$(':checked');
			$check.each(function(){
				valueStr+=this.value+',';
			})
			var valueStr=valueStr.slice(0,-1);
			$.get('/deleteBlog',{blogId:valueStr},function(data){
				if(data=='success'){
					$check.parent().remove();
					alert('删除成功')
				}else{
					alert('删除失败')
				}
			},'text')
		})
	})
</script>
</body></html>